{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./source/app.css"
      },
      {
        "type": "script",
        "src": "./source/app.js"
      }
    ]
  },
  "hooks": [
    {
      "endpoint": "https://us-central1-slack-thank-you.cloudfunctions.net/slackExtractWebhook",
      "events": ["option-change:account"],
      "block": true,
      "authenticate": ["account"],
      "failure": {
        "action": "notify",
        "message": "There was an error communicating with the service."
      }
    }
  ],
  "options": {
    "properties": {
      "account": {
        "title": "Slack account",
        "order": 0,
        "type": "object",
        "format": "account",
        "services": ["slack-app"]
      },
      "location": {
        "title": "Button Location",
        "description": "Where should the button appear?",
        "order": 1,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      }
    }
  }
}